<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ashtonandassociates.thermopi.OverviewFragment$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fragment_margin_left"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/control_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Name"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/control_set_temperature_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_set_temperature_current"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/control_set_temperature_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_set_temperature_status"
                android:textSize="16dp"/>
            <TextView
                android:text="@string/main_set_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/control_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/control_radio_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_radio_time"
                    android:checked="true"
                    />
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/control_radio_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_radio_temperature"
                    android:checked="false"
                    />
            </RadioGroup>
        </LinearLayout>
        <ListView
            android:id="@+id/control_list_recent_control_values"
            android:visibility="visible"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        <LinearLayout
            android:id="@+id/control_temperature_layout_group"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/control_temperature_degrees"
                android:text="@string/control_set_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <SeekBar
                        android:id="@+id/control_seekbar_temperature"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/label_temperature_degrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <Button
                    android:id="@+id/control_button_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_submit"/>
            </LinearLayout>
            <!--TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/control_set_temperature_detail"
                /-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/control_time_layout_group"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/control_label_time"
                android:text="@string/control_set_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/control_edittext_time"
                    android:hint="@string/control_set_time_hint"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
                <Button
                    android:id="@+id/control_button_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_submit"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/control_debug_layout_group"
            android:visibility="invisible"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="@string/control_text_debug_output"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/control_debug_textview_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
